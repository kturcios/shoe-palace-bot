{
  "name": "electron-react-boilerplate",
  "productName": "Electron React Boilerplate",
  "main": "electron/main.js",
  "version": "0.1.0",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.10.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.1.2",
    "electron-updater": "^4.3.1",
    "glob": "^7.1.6",
    "puppeteer": "^4.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start-electron": "concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "build-electron": "mkdir build/src && cp -r electron/. build/electron && cp -r src/shared/. build/src/shared",
    "dist": "npm run build && npm run build-electron && electron-builder --mac -c.extraMetadata.main=build/electron/main.js --publish never"
  },
  "build": {
    "productName": "Electron React Boilerplate",
    "generateUpdatesFilesForAllChannels": true,
    "afterSign": "scripts/notarize.js",
    "appId": "com.microstrategy.cloud.boilerplate",
    "copyright": "Copyright Â© 2020 MSTR",
    "dmg": {
      "sign": false
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "./public/mstr.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "publish": [
      {
        "provider": "s3",
        "bucket": "BUCKET_NAME",
        "region": "us-east-1"
      }
    ],
    "releaseInfo": {
      "releaseNotes": "- Sample release notes"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "electron": "^8.2.5",
    "electron-builder": "^22.6.0",
    "electron-notarize": "^0.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "wait-on": "^3.3.0"
  }
}
